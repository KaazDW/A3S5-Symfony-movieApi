{% extends 'base.html.twig' %}

{% block body %}
    <div class="w-75 mx-auto">
        <div class="row mt-5">
            <div class="col-md-4">
                <img src="{{ movie.picturePath }}" class="card-img-top img-fluid img-thumbnail" alt="{{ movie.title }}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="">{{ movie.title }}</h5>
                    <p class="resume">
                        {% if movie.overview is empty %}
                            Aucune description disponible.
                        {% else %}
                            {{ movie.overview }}
                        {% endif %}
                    </p>
                    <div class="d-flex align-items-center justify-content-around">
                        <form class="" method="post" action="{{ path('add_movie_to_favorites', {'id': movie.id}) }}">
                            <button type="submit" class="btn btn-outline-light">
                                Ajouter aux favoris <i class="fas fa-heart"></i>
                            </button>
                        </form>
                        <ul class="list-unstyled">
                            <li class="card-text position"><b>Date de sortie : </b>{{ movie.releaseDate|date('d/m/Y') }}</li>
                            <li class="card-text "><b>Langue :</b>
                                    {% if movie.originalLanguage == "en" %}
                                        Anglais
                                    {% elseif movie.originalLanguage == "pl" %}
                                        Polonais
                                    {% else %}
                                        Français
                                    {% endif %}
                            </li>
                            <li class="card-text">
                                <b>Note :</b> {{ movie.voteAverage }}/10
                            </li>
                            <li class="card-text">
                                <i>
                                    {% if movie.isAdult == true %}
                                        Réservé a un public adultes.
                                    {% else %}
                                        Adapté tous publics.
                                    {% endif %}
                                </i>
                            </li>
                        </div>
                    </div>
                    <div class="pt-3" style="border-top: 1px solid white;">
                        <h5 class="fw-bold">Acteurs :</h5>
                        <div class="d-flex overflow-scroll scroller">
                            {% for actor in actors %}
                            <div class="mx-1 overflow-y: scroll;"> 
                                <img src="{{ actor.urlPicture }}" class="" style="border-radius: 10px; object-fit: cover; height: 150px; width: 100px;" alt="photo de l'acteur non trouvé">
                                {{ actor.name }}
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Avis</button>
                            <button class="nav-link" id="nav-addAvis-tab" data-bs-toggle="tab" data-bs-target="#nav-addAvis" type="button" role="tab" aria-controls="nav-addAvis" aria-selected="false">Mes avis</button>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
                            {% if opinions is not empty %}
                                <ul>
                                    {% for opinion in opinions %}
                                        <li>
                                            <img src="{{ opinion.avatarPath }}" class="card-img-top img-fluid img-thumbnail avatar_avis" alt="image avatar utilisateur">
                                        - {{ opinion.username }} - {{ opinion.rating }}/10 :<br></br>{{ opinion.content }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p>Aucun opinion trouvé.</p>
                            {% endif %}
                        </div>
                        <div class="tab-pane fade" id="nav-addAvis" role="tabpanel" aria-labelledby="nav-addAvis-tab" tabindex="0">
                            {% if avis is not empty %}
                                <h2>Avis existants :</h2>
                                <ul>
                                    {% for avi in avis %}
                                        <li>
                                            {{ avi.username }} a noté {{ avi.rates }}/10 : {{ avi.description }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p>Aucun avis ajouté.</p>
                            {% endif %}
                            <div>
                                <a class="text-decoration-none" href="{{ path('ajouter_avis_film', {'id': movie.id}) }}">
                                    <h5 class="card-title text-center custom-title">Ajouter un avis</h5>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .scroller::-webkit-scrollbar{
            display: none;
        }
        .avatar_actor{
            height: 90px;
            width: 90px;
        }
        .custom-title {
            border-top: 2px solid #000; /* Ligne au-dessus du titre */
            border-bottom: 2px solid #000; /* Ligne en dessous du titre */
            padding: 10px 0;
            font-size: 1.5rem; /* Taille de police du titre */
        }

        .resume{
            text-align: justify;
        }
        .customFavs{
            margin-bottom: 20px;
            margin-left: 150px;
        }
        .position{
            margin-top: 30px;
        }
        .pos{
            margin-top: 30px;
        }

    </style>
{% endblock %}

